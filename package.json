{
  "name": "righttp",
  "version": "1.0.0",
  "description": "An opinionated easy-to-use functional Fetch API wrapper",
  "author": "Oskar Grunning <oskargrunning@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/sQVe/righttp#righttp",
  "repository": "github:sQVe/righttp",
  "bugs": "https://github.com/sQVe/righttp/issues",
  "keywords": [
    "easy-to-use",
    "fetch",
    "functional",
    "http",
    "opinionated",
    "wrapper"
  ],
  "scripts": {
    "build": "run-s clean build:*",
    "build:cjs": "BUILD_BUNDLE=cjs rollup -c",
    "build:es": "BUILD_BUNDLE=es rollup -c",
    "build:types": "tsc --declaration --outDir types src/index.ts && rm -f types/*.js",
    "check": "tsc",
    "clean": "rm -rf {coverage,es,lib,types}",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "eslint --fix '{{src,test}/*,*}.{js,jsx,ts,tsx}'",
    "format:prettier": "prettier --write '{**/*,*}.{js,json,jsx,md,ts,tsx,yaml}'",
    "lint": "eslint '{{src,test}/*,*}.{ts,tsx}'",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:upload": "jest --coverage && codecov",
    "test:watch": "jest --watch --onlyChanged"
  },
  "main": "lib/righttp.js",
  "module": "lib/righttp.es.js",
  "types": "types/index.d.ts",
  "files": [
    "es",
    "lib",
    "types"
  ],
  "devDependencies": {
    "@babel/cli": "~7.11.0",
    "@babel/core": "~7.11.0",
    "@babel/preset-env": "~7.11.0",
    "@babel/preset-typescript": "~7.10.0",
    "@rollup/plugin-commonjs": "~15.0.0",
    "@rollup/plugin-json": "~4.1.0",
    "@rollup/plugin-node-resolve": "~9.0.0",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-core": "~7.0.0-bridge.0",
    "babel-eslint": "~10.1.0",
    "babel-jest": "~26.3.0",
    "babel-plugin-ramda": "~2.0.0",
    "codecov": ">=3.7.1",
    "eslint": "~7.8.0",
    "eslint-config-sqve": "~2.12.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "~4.3.0",
    "jest": "~26.4.0",
    "jest-fetch-mock": "~3.0.0",
    "lint-staged": "~10.3.0",
    "npm-run-all": "~4.1.5",
    "prettier": "~2.1.0",
    "rollup": "~2.26.0",
    "rollup-plugin-babel": "~4.4.0",
    "rollup-plugin-terser": "~7.0.0",
    "semantic-release": "~17.2.3",
    "typescript": "~4.0.0"
  }
}
